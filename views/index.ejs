<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./style.css" />
    <title>Todo List</title>
  </head>
  <body>
    <div class="container">
      <form action="/items" id="addForm" method="POST">
        <div class="formFields">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" />
        </div>
        <div class="formFields">
          <label for="description">Description</label>
          <input type="text" name="description" id="description" />
        </div>
        <div class="formFields">
          <label for="dueDate">Due Date</label>
          <input type="date" name="dueDate" id="dueDate" />
        </div>
        <div class="formFields">
          <label for="priority">Priority</label>
          <select name="priority" id="priority">
            <option value="">Select one</option>
            <option data-index="0" value="low">Low</option>
            <option data-index="1" value="medium">Medium</option>
            <option data-index="2" value="high">High</option>
            <option data-index="3" value="urgent">Urgent</option>
          </select>
        </div>
        <div class="formFields">
          <label for="progress">Progress</label>
          <select name="progress" id="progress">
            <option value="">Select one</option>
            <option data-index="0" value="todo">To Do</option>
            <option data-index="1" value="doing">Doing</option>
            <option data-index="2" value="done">Done</option>
          </select>
        </div>
        <div id="formProjectElem" class="formFields">
          <label for="project">Project</label>
          <select name="project" id="">
            <option value="">Select one</option>
            <% for(let i = 0; i < projects.length; i++) {%>
            <option data-index="<%= projects[i].title %>" value="<%= projects[i].title %>"><%= projects[i].title %></option>
            <% } %>
          </select>
        </div>
        <div class="formFields">
          <button type="submit">Add to list</button>
        </div>
      </form>
    </div>

    <div class="projects">
      <div class="title">
        <h2>Projects</h2>
      </div>

      <div class="flex">
        <div class="card">
          <div class="project-btn">All</div>
        </div>
        <% for(let i = 0; i < projects.length; i++) {%>
          <a href="<%=`/projects?project=${projects[i].title}`%>">
            <div class="card">
              <div class="project-btn"><%= projects[i].title %></div>
            </div>
          </a>
        <% } %>
        <div class="card">
          <form action="/projects/" id="add-project-form" class="hidden">
            <label for="add-project">Add project</label>
            <input type="text" name="add-project" id="id-project-input">
            <button  type="button" id="cancel-btn">Cancel</button>
            <button type="submit">Submit</button>
          </form>
          <div id="add-project">Add project</div>
        </div>
      </div>
    </div>

    <div class="items">
      <div class="title msg flex">
        <div><h2>Items</h2></div>
        <div id="msg"></div>
      </div>
      <div class="grid">
        <% for(let i = 0; i < items.length; i++) {%>
        <div data-id=<%= items[i]["_id"] %> class="card">
          <div class="flex">
            <div>title:</div>
            <div contenteditable="true"><%= items[i].title %></div>
          </div>
          <div class="flex">
            <div>description:</div>
            <div contenteditable="true"><%= items[i].description %></div>
          </div>
          <div>
            <label for="dueDate">due date:</label>
            <% if (items[i].dueDate === null) { %>
            <input type="date" name="dueDate" value="">
            <%} else { %>
            <input type="date" name="dueDate" value="<%= items[i].dueDate.toISOString().slice(0, 10) %>">
            <% } %>
          </div>
          <div class="flex">
            <div>priority:</div>
            <div><%= items[i].priority %></div>
          </div>
          <div class="flex">
            <div>progress:</div>
            <div><%= items[i].progress %></div>
          </div>
          <div class="flex">
            <div>project:</div>
            <div><%= items[i].project %></div>
          </div>
          <div class="flex edit-btn">
            <div><button type="button" class="update-btn">Update</button></div>
            <div><button type="button" class="delete-btn">Delete</button></div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <script src="./main.js"></script>
  </body>
</html>
